{
  "name": "tannin-wine-app",
  "version": "1.0.0",
  "description": "API for Wine",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.7"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/88dennis/tannin-wine-app.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/88dennis/tannin-wine-app/issues"
  },
  "homepage": "https://github.com/88dennis/tannin-wine-app#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "connect-mongo": "^2.0.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-session": "^1.16.1",
    "mongoose": "^5.5.5",
    "nodemailer": "^6.1.1",
    "passport": "^0.4.0",
    "passport-google-oauth": "^2.0.0",
    "passport-local": "^1.0.0",
    "if-env": "^1.0.4",
    "axios": "^0.18.0"
  }
}
